<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/primaryDarkColor"
    tools:context=".ui.activities.DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDarkColor"
            app:contentScrim="@color/primaryDarkColor"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/img_poster_detail"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:contentDescription="@string/app_icon"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:src="@drawable/ic_placeholder_image" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/gradient_background"
                    app:layout_constraintBottom_toBottomOf="@id/img_poster_detail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_title_detail"
                    style="@style/DefaultTextView"
                    android:padding="@dimen/dimen_small"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    app:layout_constraintVertical_bias="0.45"
                    tools:text="Mortal Kombat Legends: Scorpion's Revenge" />

                <TextView
                    android:id="@+id/tv_release_date"
                    style="@style/DefaultTextView"
                    android:layout_marginTop="@dimen/dimen_super_small"
                    android:layout_marginBottom="@dimen/dimen_standard"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_title_detail"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_detail"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_detail"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="11-02-2021" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="@dimen/dimen_large"
                    app:layout_constraintBottom_toBottomOf="@+id/img_poster_detail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_poster_detail"
                    app:srcCompat="@drawable/circle_background"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_rating_detail"
                    style="@style/DefaultTextView"
                    android:layout_margin="@dimen/dimen_standard"
                    android:textAlignment="center"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintHorizontal_bias="0.37"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2"
                    tools:text="8.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <ImageButton
                    android:id="@+id/btn_back_detail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_super_small"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/app_icon"
                    android:src="@drawable/ic_left_arrow_secondary_color" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/pg_detail"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="invisible" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tag_line"
                style="@style/DefaultTextView"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/dimen_standard"
                android:layout_marginTop="@dimen/dimen_large"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Animation | Adventure" />

            <TextView
                android:id="@+id/tv_status_detail"
                style="@style/DefaultTextView"
                android:layout_marginTop="@dimen/dimen_standard"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/dimen_standard"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tag_line"
                tools:text="Status: Actived" />

            <TextView
                android:id="@+id/tv_duration"
                style="@style/DefaultTextView"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/dimen_standard"
                android:textColor="@color/primaryTextColor"
                android:layout_marginTop="@dimen/dimen_standard"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_status_detail"
                tools:text="Duration: 200" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_standard"
                android:layout_marginVertical="@dimen/dimen_large"
                app:cardBackgroundColor="@color/secondaryColor"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_duration">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_standard">

                    <TextView
                        style="@style/DefaultTextView"
                        android:text="@string/overview"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_overview"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dimen_small"
                        android:textColor="@color/secondaryTextColor"
                        android:textStyle="normal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>